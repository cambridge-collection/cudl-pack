                        <decoDesc>
                            <decoNote type="marginal" rend="ink">
                                <list>
                                    <item>Folio <locus from="17a" to="17a">17a</locus>: Marginal
                                        indication of parashah decorated in ink.</item>
                                    <item>Folios <locus from="111b" to="111b">111b</locus>, <locus from="230a" to="230a">230a</locus>, <locus from="239b" to="239b">239b</locus>, <locus from="246a" to="246a">246a</locus>, <locus from="249b" to="249b">249b</locus>, <locus from="252b" to="252b">252b</locus>,
